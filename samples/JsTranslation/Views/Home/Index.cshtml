@inject ILocalizationProvider LocalizationProvider

@{
    var currentCulture = CultureInfo.CurrentUICulture;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Javascript translation demo</title>

    <link href="~/bundles/site.css" rel="stylesheet" />
</head>

<body onload="bodyLoad()">
    <form method="GET">
        <p>
            <select name="culture">
                @foreach (var culture in LocalizationProvider.AvailableCultures)
                {
                    <option value="@culture.Name" selected="@currentCulture.Equals(culture)">
                        @culture.DisplayName
                    </option>
                }

            </select>
        </p>

        <br />

        <p>
            <button id="submit" type="submit" onclick="return submitClick()"></button>
        </p>
    </form>

    @* including the js bundle corresponding to the current culture *@
    <script src="~/bundles/app.@(currentCulture.Name).js"></script>
</body>
</html>
